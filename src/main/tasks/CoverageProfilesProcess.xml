<?xml version="1.0" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/task/1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/task/1.2 http://uk-cri-lsol03:8080/solexa/solexa01/schema/workflow/task-1.2.xsd">

    <name>CoveraqeProfilesProcess</name>
    <description>Coverage Profiles for ChIPseqPipeline.</description>

    <program type="commandLine">
        <executable>
	mkdir -p ${TheDirectory}/FeatureProfiles
	coverageBed -hist -abam ${bam} -b ${bed} > ${ontargethist}
	</executable>
    </program>

    <inputs>
        <input name="bam" required="true" description="The Bam file." />
        <input name="bed" required="true" description="The Bam file." />
    </inputs>

    <outputs>
        <output name="ontargethist" required="true" safeNaming="false" description="Bam processes by pipeline" />
    </outputs>

    <arguments>
	<arg name="TheDirectory" required="true" description="Working Directory"/>
    </arguments>

</task:task>
