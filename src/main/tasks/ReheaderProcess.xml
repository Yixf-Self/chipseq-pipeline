<?xml version="1.0" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/task/1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/task/1.2 http://uk-cri-lsol03:8080/solexa/solexa01/schema/workflow/task-1.2.xsd">

    <name>ReheaderProcess</name>
    <description>Bam merging for ChIPseqPipeline.</description>

    <program type="commandLine">
        <executable>
	 /lustre/mib-cri/carrol09/python/PythonInstall/bin/python2.7 /lustre/mib-cri/carrol09/Work/MyPipe/Process10/PythonScripts/CRIReheader.py  ${InputFile} ${GenomeBuild} 
	/lustre/mib-cri/carrol09/Samtools/samtools-0.1.18/samtools reheader ${ReAlignDirectory}/${Name}_Sorted_Temphead.sam ${InputFile} > ${ReAlignDirectory}/${Name}_Rehead.bam
	</executable>
    </program>

    <inputs>
        <input name="InputFile"/>
    </inputs>

    <outputs>
        <output name="SortedFile" required="true" safeNaming="false" description="MarkedFile by pipeline" />
    </outputs>

    <arguments>
	<arg name="TheDirectory" required="true" description="Name for Macs output"/>
  		<arg name="Name" required="true" description="Name for Macs output"/>
    		<arg name="GenomeBuild" required="true" description="Name for Macs output"/>
    		<arg name="ReAlignDirectory" required="true" description="Name for Macs output"/>

    </arguments>

</task:task>
