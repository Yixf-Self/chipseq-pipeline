<?xml version="1.0" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/task/1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/task/1.2 http://uk-cri-lsol03:8080/solexa/solexa01/schema/workflow/task-1.2.xsd">

    <name>PeakMotifMain</name>
    <description>Controller Peak QC profiling for ChIPseqPipeline.</description>

    <program type="commandLine">
        <executable>
		${R_Executable}  --vanilla ${pipelineBase}/RScripts/R_PeakMotif_Main3.r ${WorkflowRunID} ${Config} ${PeakCaller}
	</executable>
    </program>
    <inputs>
       <input name="Config" required="true" description="Config used as required input" />
    </inputs>

    <outputs>
       <output name="Tracker" required="true" safeNaming="false" description="A dummy file to mark completion" />
    </outputs>

    <arguments>
	<arg name="WorkflowRunID" required="true" description="Workflow ID"/>
	<arg name="WorkflowDir" required="true" description="Where to look for the workflow output"/>
	<arg name="R_Executable" required="true" description="R for workflow"/>
	<arg name="PeakCaller" required="true" description="Which PeakCaller was used.."/>
	<arg name="pipelineBase" required="true" description="R for workflow"/>
    </arguments>

</task:task>