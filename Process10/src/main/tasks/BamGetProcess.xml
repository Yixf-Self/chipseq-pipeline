<?xml version="1.0" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/task/1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/task/1.2 http://uk-cri-lsol03:8080/solexa/solexa01/schema/workflow/task-1.2.xsd">

    <name>BamGetProcess</name>
    <description>Bam merging for ChIPseqPipeline.</description>

    <program type="commandLine">
        <executable>
	mkdir -p ${TheDirectory}heloo
	rsync -av ${BamToGrab} ${TheDirectory}bamFiles --log-file=${TheDirectory}bamFiles/${BamName}.log
	</executable>
    </program>

    <outputs>
       <output name="ReceivedBam" required="true" safeNaming="false" description="MergedFile by pipeline" />
    </outputs>


    <arguments>
	<arg name="TheDirectory" required="true" description="Name for Macs output"/>
       <arg name="BamToGrab" required="true" description="Name for Macs output"/>
       <arg name="BamName" required="true" description="Name for Macs output"/>
    </arguments>

</task:task>
