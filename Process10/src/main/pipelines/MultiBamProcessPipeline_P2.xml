	<task name="BedgraphProcess" type="BedgraphProcess">                  


		    <resources>
                        <memory>4G</memory>
                    </resources>
                    
                
                    <inputs>
                	<input name="bam_processed">${BamDirectory}/${Test}.bam</input>
                	<input name="genome">${genomeFile}</input>
                    </inputs>

                    <outputs>
                        <output name="Bedgraph">${WorkingDirectory}/Coverage/${Test}.bedgraph</output>
                    </outputs>

	<arguments>
    	    <arg name="TheDirectory">${WorkingDirectory}</arg>
    	</arguments> 


                </task>

        <task name="WigHistogram" type="WigHistogram">
	                    <resources>
	                        <memory>4G</memory>
	                    </resources>
	                   
	                    <inputs>
                		<input name="bam_processed">${BamDirectory}/${Test}.bam</input>
                		<input name="genome">${genomeFile}</input>
	                    </inputs>
	
	                    <outputs>
	                        <output name="Histogram">${WorkingDirectory}/Coverage/${Test}.hist</output>
	                    </outputs>

	<arguments>
    	    <arg name="TheDirectory">${WorkingDirectory}</arg>
    	</arguments> 

               </task>
        <task name="TSSAverageCoverageProcess" type="AverageCoverageProcess">
	                    <resources>
	                        <memory>4G</memory>
	                    </resources>
	                   
	                    <inputs>
                		<input name="bam_processed">${BamDirectory}/${Test}.bam</input>
	                    </inputs>
	
	                    <outputs>
	                        <output name="CovProfile">${WorkingDirectory}/Coverage/TSS_AvCov_${Test}.RData</output>
	                    </outputs>

	<arguments>
    	    <arg name="TheDirectory">${WorkingDirectory}</arg>
           <arg name="genomeName">${genomeName}</arg>
    	</arguments> 
               </task>


        <task name="CountingReadsInFeatures" type="CountingReadsInFeatures">
	                    <resources>
	                        <memory>4G</memory>
	                    </resources>
	                   
	                    <inputs>
                		<input name="bam_processed">${BamDirectory}/${Test}.bam</input>
	                    </inputs>
	
	                    <outputs>
	                        <output name="FeatureCounts">${WorkingDirectory}/Coverage/${Test}_ReadCountsInFeatures.txt</output>
	                    </outputs>

	<arguments>
    	    <arg name="TheDirectory">${WorkingDirectory}</arg>
           <arg name="genomeName">${genomeName}</arg>
    	</arguments> 
               </task>


